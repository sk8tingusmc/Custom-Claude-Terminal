{
  "name": "custom-claude-terminal",
  "version": "1.0.0",
  "description": "Simplified Claude Code terminal interface for Linux",
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "npx concurrently -k \"vite\" \"npx wait-on http://localhost:5173 && electron .\"",
    "dev": "npx concurrently -k \"vite\" \"npx wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build:electron && npm run build:vite && electron-builder",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:vite": "vite build"
  },
  "keywords": ["claude", "terminal", "electron"],
  "author": "Blake",
  "license": "MIT",
  "dependencies": {
    "@lydell/node-pty": "^1.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "electron-store": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.custom-claude",
    "productName": "Custom Claude",
    "icon": "assets/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/@lydell/node-pty/build/Release",
        "to": "node-pty"
      }
    ],
    "linux": {
      "target": ["AppImage"],
      "category": "Development",
      "maintainer": "Blake",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.png"
    }
  }
}
